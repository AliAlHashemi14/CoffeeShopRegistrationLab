<form method="post" asp-action="CoffeeSummary">
<h1>Register</h1>
<div>First Name:<input type="text" name="FirstName" required></input></div>
<br />
<div>Last Name:<input type="text" name="LastName" required></input></div>
<br />
<div>Username:<input type="text" name="Username" required></input></div>
<br />
<div>Password:<input type="password" name="Password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@@#$%^&*_=+-]).{8,12}$" required></input></div>
<br />
<label for="Vegan">Are you vegan?:</label>
<input type="checkbox" name="Vegan" id="Vegan" value="true" />
<br />

<p>How do you like your drinks prepared?</p>
<label for="Hot">Hot:</label>
<input type="radio" name="FavDrink" value="Hot" id="Hot" checked="checked"/>

<label for="Iced">Iced:</label>
<input type="radio" name="FavDrink" value="Iced" id="Iced" />


<label for="Frozen">Frozen:</label>
<input type="radio" name="FavDrink" value="Frozen" id="Frozen" />
<br />

<input type="submit" />
</form>


